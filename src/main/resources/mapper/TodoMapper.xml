<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.webapi.TodoMapper">

  <resultMap id="TodoResultMap" type="com.example.demo.webapi.Todo">
    <id property="id" column="id" />
    <result property="title" column="title" />
    <result property="completed" column="completed" />
    <result property="createdAt" column="created_at" />
    <result property="updatedAt" column="updated_at" />
  </resultMap>

  <sql id="Base_Column_List">
    id, title, completed, created_at, updated_at
  </sql>

  <select id="findAll" resultMap="TodoResultMap">
    SELECT <include refid="Base_Column_List"/> FROM todo ORDER BY id
  </select>

  <select id="findById" parameterType="long" resultMap="TodoResultMap">
    SELECT <include refid="Base_Column_List"/> FROM todo WHERE id = #{id}
  </select>

  <insert id="insert" parameterType="com.example.demo.webapi.Todo" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO todo (title, completed, created_at, updated_at)
    VALUES (#{title}, #{completed}, #{createdAt}, #{updatedAt})
  </insert>

  <update id="update" parameterType="com.example.demo.webapi.Todo">
    UPDATE todo
    SET title = #{title},
        completed = #{completed},
        updated_at = #{updatedAt}
    WHERE id = #{id}
  </update>

  <delete id="delete" parameterType="long">
    DELETE FROM todo WHERE id = #{id}
  </delete>

  <delete id="deleteAll">
    DELETE FROM todo
  </delete>

  
</mapper>
